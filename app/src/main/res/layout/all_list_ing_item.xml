<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/movie_hdpi"></ImageView>

        <ImageView
            android:id="@+id/all_list_ing_img"
            android:layout_width="103dp"
            android:layout_height="123dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/all_list_ing_img">

            <RelativeLayout
                android:id="@+id/relative_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/all_list_ing_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="胡桃夹子和四个王国"
                    android:textColor="@color/loginPager"
                    android:textSize="14sp" />

                <CheckBox
                    android:button="@null"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/love_back"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_layout1"
                android:layout_marginTop="10dp"
                android:text="啦啦啦啦啦啦阿拉啊啊拉拉啊啦啦啦啦啦啦阿拉啊啊拉拉啊"
                android:textColor="@color/loginPager"
                android:maxLines="4"
                android:ellipsize="end"
                android:textSize="12sp"
                android:id="@+id/all_list_ing_count"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>