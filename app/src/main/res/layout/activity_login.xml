<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_weight="3">

        <RelativeLayout
            android:id="@+id/main_login_linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp">

            <com.xw.repo.XEditText
                android:id="@+id/login_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@mipmap/log_icon_phone_default_hdpi"
                android:drawablePadding="20dp"
                android:hint="手机号"
                android:maxLength="11"
                android:textColor="@color/loginPager"
                android:textColorHint="@color/loginPager"
                android:textSize="18sp"
                android:theme="@style/MyEdTextWidth"></com.xw.repo.XEditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_login_linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_login_linear1"
            android:layout_marginTop="30dp">

            <com.xw.repo.XEditText
                android:id="@+id/login_pwd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@mipmap/log_icon_lock_default_hdpi"
                android:drawablePadding="20dp"
                android:hint="登录密码"
                android:inputType="textPassword"
                android:maxLength="11"
                android:textColor="@color/loginPager"
                android:textColorHint="@color/loginPager"
                android:textSize="18sp"
                android:theme="@style/MyEdTextWidth"></com.xw.repo.XEditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_login_linear2"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_zc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="快速注册"
                android:textColor="@color/loginPager"
                android:textSize="14sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/r1"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:background="@drawable/register_button"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/loginPager"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_btn"
            android:orientation="horizontal">

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:background="@color/loginPager" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@id/v1"
                android:layout_weight="1"
                android:gravity="center"
                android:text="第三方账号快速登录"
                android:textColor="@color/loginPager"
                android:textSize="10sp" />

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:background="@color/loginPager" />
        </LinearLayout>

        <ImageView
            android:id="@+id/login_weixin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/l1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:src="@mipmap/log_icon_weixin_default_hdpi" />

    </RelativeLayout>


</RelativeLayout>